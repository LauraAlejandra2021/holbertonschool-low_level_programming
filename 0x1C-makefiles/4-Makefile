# makefile incremental recomplication
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
		$(CC) $(OBJ) -o $(NAME)
.PHONY: clean oclean fclean re
clean:
		$(RM) *~ $(NAME)
oclean: 
		$(RM) $(OBJ)
fclean:
		$(RM) *~ (OBJ) $(NAME) 
re:
		all oclean
